---
slug: projects
---
<div id="oh-my-pi">
  <h1 id="project-title"><%= t('titles.projects') %></h1>
  <img src="#" id="project-image" alt="">
</div>
<% data.projects.each do |project| %>
  <% link_to proxy_url(project.slug), class: 'project', "data-border-color": project.color do %>
    <!-- <%= project_image(project, 'main.jpg', {
      'alt' => 'cover image',
      'class' => 'cover'
      }) %> -->
    <h2><%= project.name %></h2>
    <span class="show-more">
      <%= t('projects.show-more') %>
    </span>
    <span class="work">
      <%= project[lang.to_s].work %>
    </span>
    <span class="technologies">
      <% project.technologies.each_with_index do |t, i| %>
        <%= t %><%= ", " if i != (project.technologies.count - 1) %>
      <% end %>
    </span>
  <% end %>
<% end %>
